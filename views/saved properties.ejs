    <!-- Dropdown Menu div -->
    <div class="dropdown">
        <button onclick="myFunction()" class="dropbtn">Menu</button>
        <div id="myDropdown" class="dropdown-content">
          <a href="/home">Home</a>
          <a href="/Users/andrew.bradford/Desktop/Coding/Interactive Journal Links.html">Properties</a>
