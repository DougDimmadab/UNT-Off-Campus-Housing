    position: relative;
    margin-left: 50px;
    padding-bottom: 50px;
    font-size: 25px;
}

.btn {
    display: block;
    margin: auto;
    margin-top: 35px;
    border: none;
    width: 30%;
    height: 10%;
    background-color: green;
    color: white;
    font-size: 25px;
    cursor: pointer;
}

.forpass {
    text-align: center;
    margin-top: -38px;
}

.create_acc {
    text-align: center;
    margin-top: 50px;
